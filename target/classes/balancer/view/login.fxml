<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="650" prefWidth="900" styleClass="gradient-bg" stylesheets="@../css/login.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="balancer.viewcontroller.LoginViewController">
    <children>
        <VBox alignment="CENTER" prefHeight="650" prefWidth="664.0">
            <VBox alignment="CENTER" maxWidth="400" styleClass="login-card">
                <VBox alignment="CENTER" spacing="10" styleClass="card-header">
                    <Label styleClass="header-icon" text="🧮" />
                    <Label styleClass="header-title" text="Gestión de Cuadres" />
                    <Label styleClass="header-subtitle" text="Inicie sesión para continuar" />
                </VBox>
                <VBox spacing="15" styleClass="form-body">
                    <VBox spacing="5">
                        <Label styleClass="form-label" text="Usuario" />
                        <HBox alignment="CENTER_LEFT" spacing="5" styleClass="input-group">
                            <Label styleClass="input-icon" text="👤" />
                            <TextField fx:id="txtUsuario" promptText="Ingrese su usuario" styleClass="input-field" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                    <VBox spacing="5">
                        <Label styleClass="form-label" text="Contraseña" />
                        <HBox alignment="CENTER_LEFT" spacing="5" styleClass="input-group">
                            <Label styleClass="input-icon" text="🔒" />
                            <StackPane HBox.hgrow="ALWAYS">
                                <PasswordField fx:id="txtPassword" promptText="Ingrese su contraseña" styleClass="input-field" />
                                <TextField fx:id="txtPasswordVisible" managed="false" promptText="Ingrese su contraseña" styleClass="input-field" visible="false" />
                            </StackPane>
                            <Button onAction="#onTogglePassword" styleClass="toggle-button" text="👁" />
                        </HBox>
                    </VBox>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <CheckBox fx:id="remember" text="Recordarme" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Hyperlink text="¿Olvidó su contraseña?" />
                    </HBox>
                    <Button maxWidth="Infinity" onAction="#onLogin" styleClass="btn-login" text="Iniciar Sesión" />
                    <Label fx:id="lblError" styleClass="mensaje-error" />
                </VBox>
                <VBox alignment="CENTER" spacing="5" styleClass="card-footer">
                    <Label text="¿No tienes una cuenta?" />
                    <Hyperlink text="Contacta al administrador" />
                </VBox>
            </VBox>
            <Label styleClass="copyright" text="© 2025 Balancer. Todos los derechos reservados." />
        </VBox>
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="16.0" styleClass="content-panel" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.balancerx.viewcontroller.PuntosVentaViewController">
    <padding>
        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
    </padding>
    
    <!-- Header con búsqueda -->
    <HBox alignment="CENTER_LEFT" spacing="16.0" styleClass="info-card">
        <padding>
            <Insets bottom="16.0" left="20.0" right="20.0" top="16.0" />
        </padding>
        <Label text="Gestión de Puntos de Venta" styleClass="title" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="txtBuscar" promptText="Buscar por nombre..." prefWidth="200.0" />
        <Button fx:id="btnBuscar" text="Buscar" styleClass="button, secondary" />
        <Button fx:id="btnLimpiarBusqueda" text="Limpiar" styleClass="button, secondary" />
        <Button fx:id="btnNuevo" text="Nuevo Punto de Venta" styleClass="button, accent" />
    </HBox>
    
    <SplitPane dividerPositions="0.65" VBox.vgrow="ALWAYS" styleClass="content-panel">
        <!-- Lista de Puntos de Venta -->
        <VBox spacing="12.0" styleClass="content-panel">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>
            
            <Label text="Lista de Puntos de Venta" styleClass="subtitle" />
            
            <TableView fx:id="tablaPuntosVenta" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60" />
                    <TableColumn fx:id="colCodigo" text="Código" prefWidth="100" />
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180" />
                    <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="200" />
                    <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120" />
                    <TableColumn fx:id="colActivo" text="Activo" prefWidth="80" />
                </columns>
            </TableView>
        </VBox>

        <!-- Panel de Detalles -->
        <VBox spacing="16.0" styleClass="content-panel">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            
            <Label text="Detalles del Punto de Venta" styleClass="subtitle" />
            
            <VBox spacing="16.0" styleClass="form-container">
                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Código:" styleClass="label" />
                    <TextField fx:id="txtCodigo" styleClass="text-field" promptText="PV-001" />
                </VBox>

                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Nombre:" styleClass="label" />
                    <TextField fx:id="txtNombre" styleClass="text-field" promptText="Ingrese el nombre del punto de venta" />
                </VBox>

                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Dirección:" styleClass="label" />
                    <TextField fx:id="txtDireccion" styleClass="text-field" promptText="Dirección física" />
                </VBox>

                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Teléfono:" styleClass="label" />
                    <TextField fx:id="txtTelefono" styleClass="text-field" promptText="555-0101" />
                </VBox>

                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Email de contacto:" styleClass="label" />
                    <TextField fx:id="txtEmail" styleClass="text-field" promptText="contacto@balancerx.com" />
                </VBox>

                <VBox spacing="8.0" styleClass="form-field">
                    <CheckBox fx:id="chkActivo" text="Punto de Venta Activo" styleClass="label" />
                </VBox>

                <Region VBox.vgrow="ALWAYS" />

                <HBox spacing="12.0" alignment="CENTER_RIGHT">
                    <Button fx:id="btnEliminar" text="Desactivar" styleClass="button, secondary" />
                    <Button fx:id="btnGuardar" text="Guardar" styleClass="button" />
                </HBox>
            </VBox>
        </VBox>
    </SplitPane>
</VBox>
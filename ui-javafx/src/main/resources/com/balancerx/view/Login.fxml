<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="24.0" styleClass="form-container" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.balancerx.viewcontroller.LoginViewController">
    <padding>
        <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
    </padding>
    
    <!-- Panel de login con estilo de tarjeta -->
    <VBox alignment="CENTER" spacing="20.0" styleClass="content-panel" maxWidth="400">
        <padding>
            <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
        </padding>
        
        <Label text="BalancerX" styleClass="title" />
        <Label text="Sistema de Cuadre de Caja" styleClass="subtitle" />
        
        <VBox spacing="16.0" styleClass="form-field">
            <Label text="Email:" />
            <TextField fx:id="txtEmail" prefWidth="300" promptText="Ingrese su email" />
        </VBox>
        
        <VBox spacing="16.0" styleClass="form-field">
            <Label text="Contraseña:" />
            <PasswordField fx:id="txtPassword" prefWidth="300" promptText="Ingrese su contraseña" />
        </VBox>
        
        <Button fx:id="btnLogin" text="Iniciar Sesión" onAction="#handleLogin" prefWidth="200" />
        
        <Label fx:id="lblError" styleClass="alert-error" visible="false" />
    </VBox>
</VBox>
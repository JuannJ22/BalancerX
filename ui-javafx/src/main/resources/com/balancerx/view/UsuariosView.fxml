<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="16.0" styleClass="content-panel" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.balancerx.viewcontroller.UsuariosViewController">
    <padding>
        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
    </padding>
    
    <!-- Header con título y búsqueda -->
    <HBox alignment="CENTER_LEFT" spacing="16.0" styleClass="info-card">
        <padding>
            <Insets bottom="16.0" left="20.0" right="20.0" top="16.0" />
        </padding>
        <Label text="Gestión de Usuarios" styleClass="title" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="txtBuscar" promptText="Buscar usuarios..." prefWidth="200" styleClass="text-field" />
        <Button fx:id="btnBuscar" text="Buscar" styleClass="button, secondary" />
        <Button fx:id="btnLimpiarBusqueda" text="Limpiar" styleClass="button, secondary" />
        <Button fx:id="btnNuevo" text="Nuevo Usuario" styleClass="button, accent" />
    </HBox>
    
    <SplitPane dividerPositions="0.65" VBox.vgrow="ALWAYS" styleClass="content-panel">
        <!-- Lista de Usuarios -->
        <VBox spacing="12.0" styleClass="content-panel">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>
            
            <Label text="Lista de Usuarios" styleClass="subtitle" />
            
            <TableView fx:id="tablaUsuarios" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60" />
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180" />
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="220" />
                    <TableColumn fx:id="colRol" text="Rol" prefWidth="120" />
                    <TableColumn fx:id="colActivo" text="Activo" prefWidth="80" />
                </columns>
            </TableView>
        </VBox>
        
        <!-- Panel de Detalles -->
        <VBox spacing="16.0" styleClass="content-panel">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            
            <Label text="Detalles del Usuario" styleClass="subtitle" />
            
            <VBox spacing="16.0" styleClass="form-container">
                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Nombre:" styleClass="label" />
                    <TextField fx:id="txtNombre" styleClass="text-field" promptText="Ingrese el nombre completo" />
                </VBox>
                
                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Email:" styleClass="label" />
                    <TextField fx:id="txtEmail" styleClass="text-field" promptText="usuario@ejemplo.com" />
                </VBox>
                
                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Contraseña:" styleClass="label" />
                    <PasswordField fx:id="txtPassword" styleClass="password-field" promptText="Ingrese la contraseña" />
                </VBox>
                
                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Rol:" styleClass="label" />
                    <ComboBox fx:id="cbRol" styleClass="text-field" maxWidth="Infinity" />
                </VBox>
                
                <VBox spacing="8.0" styleClass="form-field">
                    <CheckBox fx:id="chkActivo" text="Usuario Activo" styleClass="label" />
                </VBox>
                
                <Region VBox.vgrow="ALWAYS" />
                
                <HBox spacing="12.0" alignment="CENTER_RIGHT">
                    <Button fx:id="btnEliminar" text="Eliminar" styleClass="button, secondary" />
                    <Button fx:id="btnGuardar" text="Guardar" styleClass="button" />
                </HBox>
            </VBox>
        </VBox>
    </SplitPane>
</VBox>
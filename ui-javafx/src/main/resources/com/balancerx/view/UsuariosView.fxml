<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.balancerx.viewcontroller.UsuariosViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    
    <Label text="Gestión de Usuarios" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    
    <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
        <VBox spacing="5.0">
            <TableView fx:id="tablaUsuarios" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50" />
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150" />
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="200" />
                    <TableColumn fx:id="colRol" text="Rol" prefWidth="100" />
                    <TableColumn fx:id="colActivo" text="Activo" prefWidth="75" />
                </columns>
            </TableView>
        </VBox>
        
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            
            <Label text="Detalles del Usuario" style="-fx-font-weight: bold;" />
            
            <GridPane hgap="10" vgap="10">
                <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                
                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                
                <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <PasswordField fx:id="txtPassword" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                
                <Label text="Rol:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <ComboBox fx:id="cbRol" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                
                <Label text="Activo:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <CheckBox fx:id="chkActivo" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </GridPane>
            
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Button fx:id="btnNuevo" text="Nuevo" />
                <Button fx:id="btnGuardar" text="Guardar" />
            </HBox>
        </VBox>
    </SplitPane>
</VBox>
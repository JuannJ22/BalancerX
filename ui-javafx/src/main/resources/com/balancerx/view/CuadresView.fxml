<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.balancerx.viewcontroller.CuadresViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    
    <Label text="GestiÃ³n de Cuadres" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    
    <SplitPane dividerPositions="0.6" VBox.vgrow="ALWAYS">
        <VBox spacing="5.0">
            <TableView fx:id="tablaCuadres" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50" />
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="100" />
                    <TableColumn fx:id="colPuntoVenta" text="Punto de Venta" prefWidth="150" />
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="100" />
                </columns>
            </TableView>
        </VBox>
        
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            
            <Label text="Detalles del Cuadre" style="-fx-font-weight: bold;" />
            
            <GridPane hgap="10" vgap="10">
                <Label text="Fecha:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <DatePicker fx:id="dpFecha" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                
                <Label text="Punto de Venta:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ComboBox fx:id="cbPuntoVenta" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                
                <Label text="Total Tirilla:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="txtTotalTirilla" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                
                <Label text="Total Bancos:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="txtTotalBancos" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                
                <Label text="Total Contable:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="txtTotalContable" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </GridPane>
            
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Button fx:id="btnNuevo" text="Nuevo" />
                <Button fx:id="btnGuardar" text="Guardar" />
            </HBox>
        </VBox>
    </SplitPane>
</VBox>
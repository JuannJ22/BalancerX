<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="16.0" styleClass="content-panel" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.balancerx.viewcontroller.CuadresViewController">
    <padding>
        <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
    </padding>
    
    <!-- Header con título y búsqueda -->
    <HBox spacing="16.0" alignment="CENTER_LEFT" styleClass="tool-bar">
        <padding>
            <Insets bottom="12.0" left="16.0" right="16.0" top="12.0" />
        </padding>
        <Label text="Gestión de Cuadres" styleClass="title" />
        <Region HBox.hgrow="ALWAYS" />
        <TextField fx:id="txtBuscar" promptText="Buscar cuadres..." prefWidth="200" styleClass="text-field" />
        <ComboBox fx:id="cbFiltroEstado" promptText="Filtrar por estado" prefWidth="150" styleClass="combo-box" />
        <Button fx:id="btnBuscar" text="Buscar" styleClass="button, secondary" />
        <Button fx:id="btnLimpiarBusqueda" text="Limpiar" styleClass="button, secondary" />
        <Button fx:id="btnNuevo" text="Nuevo Cuadre" styleClass="button, accent" />
    </HBox>
    
    <SplitPane dividerPositions="0.65" VBox.vgrow="ALWAYS" styleClass="content-panel">
        <!-- Lista de Cuadres -->
        <VBox spacing="12.0" styleClass="content-panel">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>
            
            <Label text="Lista de Cuadres" styleClass="subtitle" />
            
            <TableView fx:id="tablaCuadres" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60" />
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120" />
                    <TableColumn fx:id="colPuntoVenta" text="Punto de Venta" prefWidth="180" />
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="120" />
                </columns>
            </TableView>
        </VBox>
        
        <!-- Panel de Detalles -->
        <VBox spacing="16.0" styleClass="content-panel">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            
            <Label text="Detalles del Cuadre" styleClass="subtitle" />
            
            <VBox spacing="16.0" styleClass="form-container">
                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Fecha:" styleClass="label" />
                    <DatePicker fx:id="dpFecha" styleClass="text-field" />
                </VBox>
                
                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Punto de Venta:" styleClass="label" />
                    <ComboBox fx:id="cbPuntoVenta" styleClass="text-field" maxWidth="Infinity" />
                </VBox>
                
                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Total Tirilla:" styleClass="label" />
                    <TextField fx:id="txtTotalTirilla" styleClass="text-field" promptText="0.00" />
                </VBox>
                
                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Total Bancos:" styleClass="label" />
                    <TextField fx:id="txtTotalBancos" styleClass="text-field" promptText="0.00" />
                </VBox>
                
                <VBox spacing="8.0" styleClass="form-field">
                    <Label text="Total Contable:" styleClass="label" />
                    <TextField fx:id="txtTotalContable" styleClass="text-field" promptText="0.00" />
                </VBox>
                
                <Region VBox.vgrow="ALWAYS" />
                
                <HBox spacing="12.0" alignment="CENTER_RIGHT">
                    <Button fx:id="btnGuardar" text="Guardar" styleClass="button" />
                </HBox>
            </VBox>
        </VBox>
    </SplitPane>
</VBox>
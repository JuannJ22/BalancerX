<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="mainContainer" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.balancerx.viewcontroller.MenuPrincipalViewController">
    <top>
        <VBox spacing="0.0" styleClass="tool-bar">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>
            
            <!-- Header con información del usuario -->
            <HBox alignment="CENTER_LEFT" spacing="16.0" styleClass="info-card">
                <padding>
                    <Insets bottom="12.0" left="16.0" right="16.0" top="12.0" />
                </padding>
                <Label text="BalancerX" styleClass="title" />
                <Region HBox.hgrow="ALWAYS" />
                <VBox alignment="CENTER_RIGHT" spacing="4.0">
                    <Label fx:id="lblUsuario" text="Nombre de Usuario" styleClass="subtitle" />
                    <Label fx:id="lblRol" text="Rol" styleClass="caption" />
                </VBox>
            </HBox>
            
            <Separator />
            
            <!-- Barra de navegación -->
            <ToolBar styleClass="tool-bar">
                <Button fx:id="btnCuadres" text="Cuadres" styleClass="nav-button" />
                <Button fx:id="btnPuntosVenta" text="Puntos de Venta" styleClass="nav-button" />
                <Button fx:id="btnUsuarios" text="Usuarios" styleClass="nav-button" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnCerrarSesion" text="Cerrar Sesión" styleClass="button, secondary" />
            </ToolBar>
        </VBox>
    </top>
    
    <center>
        <StackPane fx:id="contentArea" styleClass="content-panel">
            <padding>
                <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
            </padding>
            
            <!-- Dashboard principal -->
            <VBox fx:id="dashboardContent" spacing="24.0" alignment="TOP_CENTER">
                <Label text="Dashboard - BalancerX" styleClass="title" />
                
                <!-- Tarjetas de resumen -->
                <HBox spacing="20.0" alignment="CENTER">
                    <VBox styleClass="info-card, primary" spacing="8.0" alignment="CENTER" prefWidth="200" prefHeight="120">
                        <padding>
                            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                        </padding>
                        <Label text="Cuadres Hoy" styleClass="caption" />
                        <Label fx:id="lblCuadresHoy" text="5" styleClass="title" />
                        <Label text="Pendientes: 2" styleClass="caption" />
                    </VBox>
                    
                    <VBox styleClass="info-card, accent" spacing="8.0" alignment="CENTER" prefWidth="200" prefHeight="120">
                        <padding>
                            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                        </padding>
                        <Label text="Puntos de Venta" styleClass="caption" />
                        <Label fx:id="lblPuntosVenta" text="3" styleClass="title" />
                        <Label text="Activos" styleClass="caption" />
                    </VBox>
                    
                    <VBox styleClass="info-card" spacing="8.0" alignment="CENTER" prefWidth="200" prefHeight="120">
                        <padding>
                            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                        </padding>
                        <Label text="Usuarios" styleClass="caption" />
                        <Label fx:id="lblUsuarios" text="8" styleClass="title" />
                        <Label text="Registrados" styleClass="caption" />
                    </VBox>
                </HBox>
                
                <!-- Acciones rápidas -->
                <VBox spacing="16.0" alignment="CENTER">
                    <Label text="Acciones Rápidas" styleClass="subtitle" />
                    <HBox spacing="16.0" alignment="CENTER">
                        <Button fx:id="btnNuevoCuadre" text="Nuevo Cuadre" styleClass="button, accent" prefWidth="150" />
                        <Button fx:id="btnReportes" text="Ver Reportes" styleClass="button" prefWidth="150" />
                        <Button fx:id="btnConfiguracion" text="Configuración" styleClass="button, secondary" prefWidth="150" />
                    </HBox>
                </VBox>
                
                <!-- Actividad reciente -->
                <VBox spacing="12.0" alignment="CENTER" maxWidth="600">
                    <Label text="Actividad Reciente" styleClass="subtitle" />
                    <VBox styleClass="content-panel" spacing="8.0">
                        <padding>
                            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                        </padding>
                        <HBox spacing="8.0" alignment="CENTER_LEFT">
                            <Label text="•" styleClass="accent" />
                            <Label text="Cuadre #001 - Punto de Venta 1 - Aprobado" styleClass="caption" />
                        </HBox>
                        <HBox spacing="8.0" alignment="CENTER_LEFT">
                            <Label text="•" styleClass="accent" />
                            <Label text="Usuario 'admin' inició sesión" styleClass="caption" />
                        </HBox>
                        <HBox spacing="8.0" alignment="CENTER_LEFT">
                            <Label text="•" styleClass="accent" />
                            <Label text="Nuevo punto de venta configurado" styleClass="caption" />
                        </HBox>
                    </VBox>
                </VBox>
            </VBox>
        </StackPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="8.0" styleClass="tool-bar">
            <padding>
                <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
            </padding>
            <Label text="BalancerX v2.0.0" styleClass="caption" />
        </HBox>
    </bottom>
</BorderPane>
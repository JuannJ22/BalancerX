<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="mainContainer" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.balancerx.viewcontroller.MenuPrincipalViewController">
    <top>
        <VBox spacing="0.0" styleClass="tool-bar">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>
            
            <!-- Header con información del usuario -->
            <HBox alignment="CENTER_LEFT" spacing="16.0" styleClass="info-card">
                <padding>
                    <Insets bottom="12.0" left="16.0" right="16.0" top="12.0" />
                </padding>
                <Label text="BalancerX" styleClass="title" />
                <Region HBox.hgrow="ALWAYS" />
                <VBox alignment="CENTER_RIGHT" spacing="4.0">
                    <Label fx:id="lblUsuario" text="Nombre de Usuario" styleClass="subtitle" />
                    <Label fx:id="lblRol" text="Rol" styleClass="caption" />
                </VBox>
            </HBox>
            
            <Separator />
            
            <!-- Barra de navegación -->
            <ToolBar styleClass="tool-bar">
                <Button fx:id="btnCuadres" text="Cuadres" styleClass="nav-button" />
                <Button fx:id="btnPuntosVenta" text="Puntos de Venta" styleClass="nav-button" />
                <Button fx:id="btnUsuarios" text="Usuarios" styleClass="nav-button" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnCerrarSesion" text="Cerrar Sesión" styleClass="button, secondary" />
            </ToolBar>
        </VBox>
    </top>
    
    <center>
        <StackPane styleClass="content-panel">
            <padding>
                <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
            </padding>
            <Label text="Seleccione una opción del menú" styleClass="subtitle" />
        </StackPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="8.0" styleClass="tool-bar">
            <padding>
                <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
            </padding>
            <Label text="BalancerX v2.0.0" styleClass="caption" />
        </HBox>
    </bottom>
</BorderPane>